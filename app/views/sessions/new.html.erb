
<div class="col-md-6 col-md-offset-3" style = "margin-top: 80px">
  <!-- Horizontal Form -->
  	<h1 style = "color: #fff" align="center"> SAU Management </h1>
  	<div class="box box-solid box-primary">
    	<div class="box-header with-border">
      		<h3 class="box-title">Sign In</h3>
    	</div><!-- /.box-header -->
    <!-- form start -->
    	<%= form_for :sessions, url: login_path, html: {class: "form-horizontal"} do |f| %>
	  	<div class="box-body">
	    	<div class="form-group">
	      		<%= f.label :email, class: 'col-sm-2 control-label' %>
	      		<div class="col-sm-10">
	      			<%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
	     		</div>
	    	</div>
	   		<div class="form-group">
	      		<%= f.label :password, class: 'col-sm-2 control-label' %>
	      		<div class="col-sm-10">
	      			<%= f.password_field :password, class: 'form-control', placeholder: 'Passowrd' %>
	       		</div>
	  		</div>
	    
	  	</div><!-- /.box-body -->
	    <div class="box-footer">
	        <!-- <button type="submit" class="btn btn-default">Cancel</button> -->
	        <%= f.submit "Login", class: "btn btn-primary pull-right" %>
	    </div><!-- /.box-footer -->
	    <% end %>
	</div><!-- /.box -->
</div>
