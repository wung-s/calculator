<h1>Login</h1>
<div class ='col-md-6 col-md-offset-3'>
	<%= form_for :session, url: login_path, html: {class: "form-horizontal"} do |f| %>
	  <div class='form-group' >
		  <%= f.label :email %>
		  <%= f.email_field :email, class: 'form-control', style: 'width: 70%' %>
	  </div>
	  <div class ='form-group'>
		  <%= f.label :password %>
		  <%= f.password_field :password, class: 'form-control', style: 'width: 70%' %>
	  </div>
	  <div class = 'form-group'>
	  	<%= f.submit "Login", class: 'btn btn-primary' %>
	  </div>	

	<% end %>
</div>
